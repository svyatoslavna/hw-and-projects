        "print(\"Во втором хранится:\", y)\n",
        "print(\"Меняем предметы местами... Меняем... Меняем...\")\n",
        "\n",
        "x, y = y, x\n",
        "\n",
        "print(\"В первом хранится:\", x)\n",
        "print(\"Во втором хранится:\", y)"
